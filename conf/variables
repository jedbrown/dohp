include ${PETSC_DIR}/conf/variables

DOHP_LIB_DIR = ${DOHP_DIR}/${PETSC_ARCH}/lib
DOHP_INCLUDE = -I${DOHP_DIR} -I${DOHP_DIR}/include
CC_INCLUDES = ${PETSC_INCLUDE} ${DOHP_INCLUDE}

INSTALL_LIB_DIR = ${DOHP_LIB_DIR}
CCPPFLAGS = ${PETSC_CCPPFLAGS} ${DOHP_INCLUDE}

DOHP_LIB =  ${CC_LINKER_SLFLAG}${DOHP_LIB_DIR} -L${DOHP_LIB_DIR} -ldohp ${PETSC_LIB}

SHLIBS = libdohp
